modules = ["nodejs-20", "postgresql-16", "python-3.11"]

[nix]
channel = "stable-24_05"
packages = ["tree"]

[workflows]
runButton = "Start Server"

[[workflows.workflow]]
name = "Start Server"
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "NODE_ENV=development SESSION_SECRET=test-secret PORT=5000 HOST=0.0.0.0 TS_NODE_TRANSPILE_ONLY=true npx ts-node scripts/dev.ts"
waitForPort = 5000

[[workflows.workflow]]
name = "Database Setup"
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx ts-node scripts/push-schema.ts && ts-node scripts/generate-migrations.ts && ts-node scripts/migrate.ts && ts-node scripts/seed-clean.ts"

[[workflows.workflow]]
name = "Deploy"
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node scripts/fix-deployment-issues.js && npx tsc --skipLibCheck"

[deployment]
run = ["sh", "-c", "NODE_ENV=production PORT=8000 HOST=0.0.0.0 node dist/server/index.js"]
build = ["sh", "-c", "cd client && npm run build && cd .. && npx tsc --skipLibCheck"]

[[ports]]
localPort = 5000
externalPort = 5000

[[ports]]
localPort = 5001
externalPort = 3000

[[ports]]
localPort = 8000
externalPort = 80