modules = ["nodejs-20", "postgresql-16", "python-3.11"]

[nix]
channel = "stable-24_05"
packages = ["tree"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "DB Push"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "DB Generate Migrations"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "DB Migrate"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "DB Seed"

[[workflows.workflow]]
name = "Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "NODE_ENV=development SESSION_SECRET=test-secret PORT=5000 TS_NODE_TRANSPILE_ONLY=true npx ts-node -r dotenv/config scripts/dev.ts"
waitForPort = 5000

[[workflows.workflow]]
name = "DB Push"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx ts-node -r dotenv/config scripts/push-schema.ts"

[[workflows.workflow]]
name = "DB Generate Migrations"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "ts-node -r dotenv/config scripts/generate-migrations.ts"

[[workflows.workflow]]
name = "DB Migrate"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "ts-node -r dotenv/config scripts/migrate.ts"

[[workflows.workflow]]
name = "DB Seed"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "ts-node -r dotenv/config scripts/seed-clean.ts"

[deployment]
run = ["sh", "-c", "NODE_ENV=production PORT=5000 HTTP_PORT=8000 node dist/server/index.js"]
build = ["sh", "-c", "cd client && npm run build && cd .. && npx tsc"]

[[ports]]
localPort = 5000
externalPort = 5000

[[ports]]
localPort = 5001
externalPort = 3000

[[ports]]
localPort = 8000
externalPort = 80
