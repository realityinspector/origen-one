modules = ["nodejs-20", "postgresql-16", "python-3.11"]

[nix]
channel = "stable-24_05"
packages = ["tree"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "DB Push"

[[workflows.workflow]]
name = "Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "NODE_ENV=development SESSION_SECRET=test-secret PORT=5000 npx ts-node -r dotenv/config server/index.ts"
waitForPort = 5000

[[workflows.workflow]]
name = "DB Push"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx ts-node -r dotenv/config scripts/push-schema.ts"

[deployment]
run = ["sh", "-c", "cd server && npm install && NODE_ENV=development PORT=5000 node index.js"]

[[ports]]
localPort = 5000
externalPort = 5000

[[ports]]
localPort = 5001
externalPort = 3000

[[ports]]
localPort = 8000
externalPort = 80
