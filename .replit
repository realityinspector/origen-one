modules = ["postgresql-16", "nodejs-20"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Server"

[[workflows.workflow]]
name = "Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "NODE_ENV=development SESSION_SECRET=test-secret PORT=5000 npx ts-node -r dotenv/config server/index.ts"
waitForPort = 5000

[deployment]
run = ["sh", "-c", "cd server && npm install && NODE_ENV=development PORT=5000 node index.js"]

[[ports]]
localPort = 5000
externalPort = 5000

[[ports]]
localPort = 8000
externalPort = 80
